<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joovictorfirmino.cadastrosqlite.MainActivity">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/listLista"/>

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_below="@+id/listLista"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:text="Buscar cadastro"
        android:layout_alignStart="@+id/btnCadastro"
        android:layout_alignEnd="@+id/btnCadastro" />
</RelativeLayout>
